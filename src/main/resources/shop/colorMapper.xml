<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.appleshopingmall.shop.product.ColorMapper">
    <resultMap id="colorMapper" type="com.appleshopingmall.shop.product.ColorEntity">
        <result column="color_id" property="colorID"/>
        <result column="product_id" property="productID"/>
        <result column="product_color" property="productColor"/>
    </resultMap>
    <select id="getProductColor" resultMap="colorMapper">
        select * from color where product_id = #{productID}
    </select>
</mapper>